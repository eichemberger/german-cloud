<form method="post" action="<%= action %>" enctype="multipart/form-data">
  <div class="relative z-0 w-full mb-6 group">

      <label
        for="name"
        class="relative block rounded-md border border-gray-200 shadow-sm focus-within:border-blue-600 focus-within:ring-1 focus-within:ring-blue-600">
      <input
        value="<%= course.name %>" 
        type="text"
        id="name"
        name="name"
        class="peer border-none w-full py-2.5 pl-3 bg-transparent placeholder-transparent focus:border-transparent focus:outline-none focus:ring-0"
        placeholder="Nombre del curso"
      />
    
      <span
        class="pointer-events-none absolute start-2.5 top-0 -translate-y-1/2 bg-white p-0.5 text-xs text-gray-700 transition-all peer-placeholder-shown:top-1/2 peer-placeholder-shown:text-sm peer-focus:top-0 peer-focus:text-xs">
        Nombre
      </span>

    </div>

    <div class="mb-3 ">
      <% if (typeof errors !== 'undefined' && errors.name?.length > 0) { %>
        <%- include('./formErrors', {errors: errors.name }) %>
      <% } %>
    </div>

  <div class="grid md:grid-cols-2 md:gap-6">
    <div class="relative z-0 w-full mb-6 group">
      <label
      for="price"
      class="relative block rounded-md border border-gray-200 shadow-sm focus-within:border-blue-600 focus-within:ring-1 focus-within:ring-blue-600">
    <input
      value="<%= course.price %>" 
      type="number"
      name="price" 
      id="price" 
      class="peer border-none py-2.5 pl-3 bg-transparent placeholder-transparent focus:border-transparent focus:outline-none focus:ring-0"
      placeholder=" " />
  
    <span
      class="pointer-events-none absolute start-2.5 top-0 -translate-y-1/2 bg-white p-0.5 text-xs text-gray-700 transition-all peer-placeholder-shown:top-1/2 peer-placeholder-shown:text-sm peer-focus:top-0 peer-focus:text-xs">
      Precio
    </span>
    
  </div>
    
  <div class="relative z-0 w-full mb-6 group">
      <label
        for="duration"
        class="relative block rounded-md border border-gray-200 shadow-sm focus-within:border-blue-600 focus-within:ring-1 focus-within:ring-blue-600">
      <input
        value="<%= course.duration %>" 
        type="number" 
        name="duration" 
        id="duration" 
        class="peer border-none w-full py-2.5 pl-3 bg-transparent placeholder-transparent focus:border-transparent focus:outline-none focus:ring-0"
        placeholder=" " />
  
      <span
        class="pointer-events-none absolute start-2.5 top-0 -translate-y-1/2 bg-white p-0.5 text-xs text-gray-700 transition-all peer-placeholder-shown:top-1/2 peer-placeholder-shown:text-sm peer-focus:top-0 peer-focus:text-xs">
        Duración
      </span>
    </div>
  
  </div>

  <div class="grid md:grid-cols-2 md:gap-6">
    <div class="relative z-0 w-full mb-6 group">
      <% if (typeof errors !== 'undefined' && errors.price?.length > 0) { %>
        <%- include('./formErrors', {errors: errors.price }) %>
      <% } %>
    </div>
  
    <div class="relative z-0 w-full mb-6 group">
      <% if (typeof errors !== 'undefined' && errors.duration?.length > 0) { %>
        <%- include('./formErrors', {errors: errors.duration }) %>
      <% } %>
    </div>
  </div>

  <div class="mt-1">
    <label for="description" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Descripción del curso</label>
    <textarea 
    name="description" 
    id="description" 
    rows="4" 
    class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" 
    placeholder="Descripción"><%= course.description %></textarea>  
  </div>

  <div class="mt-4">
    <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white" for="image">Imagen</label>
    <input name="image" aria-describedby="image" id="image" type="file" class="block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 dark:text-gray-400 focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400">
    <div class="mt-1 text-sm text-gray-500 dark:text-gray-300" id="image_help">Una imagen descriptiva del curso</div>
  </div>

  <div class="mt-3 flex justify-end">
    <button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"><%= create ? 'Crear' : 'Editar' %></button>
  </div>

</form>